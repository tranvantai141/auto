{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "rootDir": "./",
    "skipLibCheck": true,
    "typeRoots": [
      "src/typings/global",
      "node_modules/@types"
    ],
    "paths": {
      "@components/*": ["src/common/components/*"],
      "@testIds": ["src/utils/Constants/TestIds"],
      "@screens/*": ["src/onBoard/*"],
      "@assets/*": ["src/assets/*"],
      "@dummy*": ["src/dummyContent*"],
      "@interfaces*": ["src/interfaces*"],
      "@stack/*": ["src/navigation/stack*"],
      "@translations*": ["src/translations*"],
      "@routeNames": ["src/navigation/RouteNames"]
    },
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "babel.config.cjs",
    "metro.config.js",
    "jest.config.cjs",
    "jest.setup.js"
  ],
  // "include": ["src"]
}
